@model UserDetailViewModel

@{
    Layout = "UILayout/_UILayout";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kullanıcı Profili</title>
    <style>
        /* Genel Stil */
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #f5f7fa, #c3cfe2);
            margin: 0;
            padding: 0;
            display :block;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
        }

        /* Container */
        .container {
            max-width: 800px;
            width: 90%;
            background: #fff;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            animation: fadeIn 1s ease-in-out;
        }

        /* Animasyon */
        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(-20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Başlık */
        h2 {
            text-align: center;
            color: #2c3e50;
            margin: 20px 0;
            font-size: 28px;
            font-weight: 600;
        }

        /* Profil Başlığı */
        .profile-header {
            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column;
            padding: 20px;
            background: linear-gradient(135deg, #6a11cb, #2575fc);
            color: #fff;
        }

        .profile-header img {
            border-radius: 50%;
            width: 120px;
            height: 120px;
            object-fit: cover;
            border: 4px solid #fff;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        }

        .profile-header .info {
            text-align: center;
            margin-top: 15px;
        }

        .profile-header .info strong {
            font-size: 24px;
            font-weight: 600;
            display: block;
        }

        .profile-header .info span {
            font-size: 16px;
            color: #e0e0e0;
        }

        /* Bilgi Tablosu */
        .info-table {
            width: 100%;
            border-collapse: collapse;
            margin: 20px 0;
        }

        .info-table th, .info-table td {
            padding: 15px;
            text-align: left;
            border-bottom: 1px solid #eee;
        }

        .info-table th {
            background-color: #f8f9fa;
            color: #6a11cb;
            font-weight: 600;
            width: 30%;
        }

        .info-table td {
            color: #555;
            font-weight: 500;
        }

        /* Footer */
        .footer {
            text-align: center;
            padding: 20px;
            background: #f8f9fa;
            border-top: 1px solid #eee;
        }

        .footer a {
            text-decoration: none;
            color: #2575fc;
            font-weight: 600;
            transition: color 0.3s ease;
        }

        .footer a:hover {
            color: #6a11cb;
            text-decoration: underline;
        }

        /* Responsive Tasarım */
        @@media (max-width: 600px) {
            .profile-header {
                flex-direction: column;
                text-align: center;
            }

            .profile-header img {
                margin-bottom: 15px;
            }

            .info-table th, .info-table td {
                padding: 10px;
            }

            h2 {
                font-size: 24px;
            }
        }
    </style>
</head>
<body>
<div class="container">
    <h2>Kullanıcı Profili</h2>

    <div class="profile-header">
        <!-- Profil Resmi -->
        <img src="https://egitimgrafik.com/wp-content/uploads/2020/01/kaplan-1-1024x1024.png" alt="Profil Resmi">
        <div class="info">
            <strong>@Model.Username</strong>
            <span>@Model.Email</span>
        </div>
    </div>

    <table class="info-table">
        <tr>
            <th>Kullanıcı Adı</th>
            <td>@Model.Username</td>
        </tr>
        <tr>
            <th>Ad Soyad</th>
            <td>@Model.Name @Model.Surname</td>
        </tr>
        <tr>
            <th>Email Adresi</th>
            <td>@Model.Email</td>
        </tr>
    </table>

    <div class="footer">
        <p>Profilinizi düzenlemek için <a href="#">buraya tıklayın</a>.</p>
    </div>
</div>
</body>
</html>